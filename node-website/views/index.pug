    link(rel='stylesheet' href='/stylesheets/style.css')

    //Title
    title Welcome

  body

    //NAVBAR
    nav(class="navbar sticky-top navbar-dark bg-dark")
      a(class="navbar-brand" href="/account") Go to account
      form(class="form-inline")
        a(class="btn btn-secondary" href="/signup" id="signupButton") Sign Up
        a(class="btn btn-secondary" href="/login" id="loginButton") Login
        a(class="btn btn-light" href="/logout" id="logoutButton") Logout
        
    #carouselExampleCaptions.carousel.slide(data-bs-ride='carousel')
      ol.carousel-indicators
        li.active(data-bs-target='#carouselExampleCaptions' data-bs-slide-to='0')
        li(data-bs-target='#carouselExampleCaptions' data-bs-slide-to='1')
        li(data-bs-target='#carouselExampleCaptions' data-bs-slide-to='2')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='/images/img1.jpg')
          .carousel-caption.d-none.d-md-block
            h5 First slide label
            p Nulla vitae elit libero, a pharetra augue mollis interdum.
        .carousel-item
          img.d-block.w-100(src='/images/img2.jpg')
          .carousel-caption.d-none.d-md-block
            h5 Second slide label
            p Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        .carousel-item
          img.d-block.w-100(src='/images/img3.jpg' )
          .carousel-caption.d-none.d-md-block
            h5 Third slide label
            p Praesent commodo cursus magna, vel scelerisque nisl consectetur.
      a.carousel-control-prev(href='#carouselExampleCaptions' role='button' data-bs-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.visually-hidden Previous
      a.carousel-control-next(href='#carouselExampleCaptions' role='button' data-bs-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.visually-hidden Next

    block content