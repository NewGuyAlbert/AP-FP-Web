    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(type='text/javascript' src='/javascripts/signup.js')
    //NAVBAR
    nav(class="navbar sticky-top navbar-dark bg-dark")
      a(class="navbar-brand" href="/") Index
    .wrapper.fadeInDown
      #formContent
        // Tabs Titles
        // Icon
        .fadeIn.first
          img#icon(src='/images/login.png' alt='User Icon')
        // Login Form

        form(action="/signup" method="POST" name="signupform" onsubmit="return validateUser()")
          input(class="fadeIn second" type="username" id="username" name="username" placeholder="Type in your username")
          input(class="fadeIn third" type="email" id="email" name="email" placeholder="Type in your email")
          input(class="fadeIn third" type="password" id="password" name="password" placeholder="Type in your password")
          input(class="fadeIn fourth" type="password" id="passwordRepeat" name="passwordRepeat" placeholder="Repeat password")
          button(class="btn btn-primary" type="submit") Sign up
